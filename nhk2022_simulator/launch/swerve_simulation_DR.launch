<?xml version="1.0" ?>
<launch>

  <arg name="model" default="$(find nhk2023_simulator)/urdf/swerve_robot.urdf.xacro"/>
  <param name="robot_description" command="$(find xacro)/xacro $(arg model) --inorder"/>
  <arg name="rvizconfig" default="$(find nhk2023_simulator)/config/localization.rviz" />

  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="world_name" value="$(find nhk2023_simulator)/worlds/nhk2023.world"/> <!-- Note: the world_name is with respect to GAZEBO_RESOURCE_PATH environmental variable -->
    <arg name="paused" value="false"/>
    <arg name="use_sim_time" value="true"/>
    <arg name="gui" value="true"/>
    <arg name="headless" value="false"/>
    <arg name="debug" value="false"/>
  </include>

  <node name="spawn_urdf" pkg="gazebo_ros" type="spawn_model"
     args="-param robot_description -x 5.450 -y 11.500 -z 0.5 -R 0 -P 0 -Y -1.570796 -urdf -model simple_swerve" />

  <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher" output="screen" ns="/simple_swerve"/>
  <node name="joint_state_publisher" pkg="joint_state_publisher" type="joint_state_publisher" output="screen"/>

  <rosparam command="load" file="$(find nhk2023_simulator)/config/swerve_controller.yaml" ns="/simple_swerve" />
  <rosparam command="load"  file="$(find nhk2023_simulator)/config/joint_state_controller.yaml" ns="/simple_swerve"/>
  <node name="controller_spawner" pkg="controller_manager" type="spawner" respawn="false" output="screen" ns="/simple_swerve"
      args="rf_joint_velocity_controller lf_joint_velocity_controller rb_joint_velocity_controller lb_joint_velocity_controller
      rf_joint_angular_controller lf_joint_angular_controller rb_joint_angular_controller lb_joint_angular_controller joint_state_controller" />

  <node name="rviz" pkg="rviz" type="rviz" args="-d $(arg rvizconfig) -f map" required="true" />

</launch>
