 <xacro:wheel rl="l" parent="base_link" />

 <xacro:laser_macro prefix="rplidar" parent="base_link" xyz="0.23 0 0.04" />
 <xacro:imu_macro prefix="imu" parent="base_link" xyz="0.0 0 0.10" />
</robot>
